<!DOCTYPE html>
<html>
  <head>
    <title>VerifiedOauth</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <div>
            <% flash.each do |name, message| %>
              <div class="<%= "alert .alert-dismissable alert-" + name %>"><%= message %></div>
            <% end %>
          </div>
          <div>
        	  <% if current_user %>
        		  Signed in as <%= current_user.first_name or " New User" %> | <%= link_to "Logout", '/logout' %>
        		<% else %>
        		  <%= link_to 'Login', '/login' %> | <%= link_to 'Signup', "/" %>
        		<% end %>
          </div>
        </div>
  	   <%= yield %>
      </div>
    </div>
  </body>
</html>
