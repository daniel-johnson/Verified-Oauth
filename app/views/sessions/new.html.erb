<div class="col-xs-12 col-md-4">
	<h1>Sign In</h1>

	<%= form_tag '/login' do %>
		<div class="form-group">
			<%= label_tag 'email' %>
			<%= email_field_tag :email, nil, class: "form-control" %>
	  </div>
	  <div class="form-group">
	  	<%= label_tag 'password' %>
	  	<%= password_field_tag :password, nil, class: "form-control" %>
	  </div>
	  <%= submit_tag "Submit", class: "btn btn-default" %>

	<% end %>
</div>